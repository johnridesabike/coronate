{
  "name": "coronate",
  "version": "1.5.1",
  "description": "Swiss chess tournament manager",
  "author": {
    "name": "John Jackson",
    "email": "johnbicyclejackson@icloud.com",
    "url": "https://johnridesa.bike/"
  },
  "license": "MPL-2.0",
  "private": true,
  "homepage": "https://coronate.netlify.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnridesabike/coronate.git"
  },
  "bugs": {
    "url": "https://github.com/johnridesabike/coronate/issues",
    "email": "johnbicyclejackson@icloud.com"
  },
  "scripts": {
    "build": "npm run build:res && node scripts/build.js",
    "deploy:github-pages": "npm run build && gh-pages -d build",
    "start": "node scripts/start.js",
    "test": "node scripts/test.js --watchAll",
    "test:ci": "node scripts/test.js --watchAll=false",
    "test:coverage": "npm run test -- --coverage",
    "build:res": "rescript",
    "start:res": "rescript build -w",
    "clean:res": "rescript clean",
    "analyze:dce": "reanalyze -dce -live-paths src/HtmlEntities",
    "analyze:exception": "reanalyze -exception"
  },
  "dependencies": {
    "@glennsl/bs-jest": "^0.6.0",
    "@octokit/core": "^3.4.0",
    "@pmmmwh/react-refresh-webpack-plugin": "0.4.3",
    "@reach/dialog": "^0.11.2",
    "@reach/tabs": "^0.11.2",
    "@reach/visually-hidden": "^0.11.1",
    "@ryyppy/rescript-promise": "^2.1.0",
    "bfj": "^7.0.2",
    "bs-jest-dom": "^4.1.1",
    "bs-react-testing-library": "^0.8.0",
    "bs-webapi": "^0.19.1",
    "case-sensitive-paths-webpack-plugin": "2.3.0",
    "chalk": "^2.4.2",
    "css-loader": "4.3.0",
    "dotenv": "8.2.0",
    "dotenv-expand": "5.1.0",
    "esbuild": "^0.11.23",
    "esbuild-jest": "^0.5.0",
    "esbuild-loader": "^2.13.1",
    "file-loader": "6.1.1",
    "fs-extra": "^9.0.1",
    "gh-pages": "^3.1.0",
    "html-webpack-plugin": "4.5.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "0.6.1",
    "localforage": "^1.9.0",
    "localforage-getitems": "^1.4.2",
    "localforage-removeitems": "^1.4.0",
    "localforage-setitems": "^1.4.0",
    "mini-css-extract-plugin": "0.11.3",
    "nanoid": "^3.1.31",
    "netlify-auth-providers": "^1.0.0-alpha5",
    "numeral": "^2.0.6",
    "optimize-css-assets-webpack-plugin": "5.0.4",
    "photon-colors": "^3.3.2",
    "postcss": "^8.3.6",
    "postcss-flexbugs-fixes": "4.2.1",
    "postcss-loader": "3.0.0",
    "postcss-normalize": "8.0.1",
    "postcss-preset-env": "6.7.0",
    "postcss-safe-parser": "^6.0.0",
    "re-classnames": "^5.0.1",
    "re-formality": "4.0.0-beta.10",
    "react": "^16.14.0",
    "react-app-polyfill": "^2.0.0",
    "react-dev-utils": "^11.0.4",
    "react-dom": "^16.14.0",
    "react-feather": "^2.0.9",
    "react-refresh": "^0.9.0",
    "reanalyze": "^2.16.0",
    "reason-react": "^0.9.1",
    "rescript": "^9.1.4",
    "rescript-blossom": "^3.0.0",
    "style-loader": "1.3.0",
    "typeface-fira-sans": "0.0.75",
    "url-loader": "4.1.1",
    "webpack": "4.44.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-manifest-plugin": "2.2.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|jsx|mjs|cjs|ts|tsx)$": "esbuild-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|cjs|ts|tsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(rescript|reason-[a-z\\-]+|@[a-z\\-]+/bs-[a-z\\-]+|re-[a-z\\-]+|rescript-[a-z\\-]+|bs-[a-z\\-]+)/)"
    ],
    "modulePaths": [],
    "moduleNameMapper": {
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "resetMocks": true
  }
}
